@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Ogani.Models.TLoaiSp>

@{
    ViewData["Title"] = "DanhSachMenu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Danh sách Menu theo loại</h3>

<p>
    <a asp-action="ThemMenuMoi">Create New</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Menu theo loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
           @{
            int i=0;
            string @cls = "table-success";
        }
 @foreach (var item in Model) {
                 i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls= "table-primary";
            }
        <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.Loai)
            </td>
            <td>
                <a asp-action="SuaMenu" asp-route-maLoaiMn="@item.MaLoai">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaLoai">Details</a> |
                <a asp-action="XoaMenu" asp-route-maLoaiMn="@item.MaLoai">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
